<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.inholland.nl.wimmusic.Controller.createOrderButtonController"
            prefHeight="400.0" prefWidth="600.0">

    <Label text="Customer Information" />
    <GridPane hgap="10" vgap="10">
        <Label text="First name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="firstName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Last name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="lastName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="E-mail address:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="email" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Phone number:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="phone" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <Label text="Products" />
    <TableView fx:id="productTable">
        <columns>
            <TableColumn text="Quantity">
                <!-- CellValueFactory here -->
            </TableColumn>
            <TableColumn text="Name">
                <!-- CellValueFactory here -->
            </TableColumn>
            <TableColumn text="Category">
                <!-- CellValueFactory here -->
            </TableColumn>
            <TableColumn text="Price">
                <!-- CellValueFactory here -->
            </TableColumn>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button fx:id="addProduct" text="Add product"/>
        <Button fx:id="deleteProduct" text="Delete product"/>
        <Button fx:id="createOrder" text="Create order"/>
    </HBox>

</VBox>
